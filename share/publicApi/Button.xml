<?xml version="1.0" ?>
<interface
    xmlns="http://umlfri.org/xmlschema/publicApi.xsd"
    name="org.umlfri.api.gui.Button"
    base="org.umlfri.api.gui.Widget"
    abstract="true">
    
    <documentation>
        Toolbar button GUI object.
    </documentation>
    
    <property name="label">
        <documentation>
            Gets botton's label.
        </documentation>
        <value type="string" readable="true" writable="true" />
    </property>
    
    <event name="clicked" type="org.umlfri.api.gui.BasicEventHandler">
        <documentation>
            Event is fired when the button is clicked.
        </documentation>
    </event>
</interface>
