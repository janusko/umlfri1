<?xml version="1.0" ?>
<interface
    xmlns="http://umlfri.org/xmlschema/publicApi.xsd"
    name="org.umlfri.api.metamodel.Metamodel">
    
    <documentation>
        Root object for metamodel object hierarchy.
    </documentation>
    
    <property name="uri">
        <documentation>
            The metamodel identifier.
        </documentation>
        
        <value type="string" readable="true" />
    </property>
    
    <property name="version">
        <documentation>
            The metamodel version.
        </documentation>
        
        <value type="string" readable="true" />
    </property>
    
    <property name="diagrams" singular="diagram">
        <documentation>
            Diagram types defined in the metamodel.
        </documentation>
        
        <index name="name" type="string" />
        
        <value type="org.umlfri.api.metamodel.DiagramType" readable="true" iterable="true" />
    </property>
    
    <property name="elements" singular="element">
        <documentation>
            Element types defined in the metamodel.
        </documentation>
        
        <index name="name" type="string" />
        
        <value type="org.umlfri.api.metamodel.ElementType" readable="true" iterable="true" />
    </property>
    
    <property name="connections" singular="connection">
        <documentation>
            Connection types defined in the metamodel.
        </documentation>
        
        <index name="name" type="string" />
        
        <value type="org.umlfri.api.metamodel.ConnectionType" readable="true" iterable="true" />
    </property>
    
    <property name="domains">
        <documentation>
            Domain types defined in the metamodel.
        </documentation>
        
        <value type="org.umlfri.api.metamodel.DomainType" iterable="true" />
    </property>
    
    <method name="listDir">
        <documentation>
            Read file/directory list from the given directory
            in the metamodel.
        </documentation>
        
        <parameter name="path" type="string">
            <documentation>
                Path to the directory.
            </documentation>
        </parameter>
        
        <return type="string" iterable="true" />
        
        <throws exception="org.umlfri.api.exceptions.ParamValueError" />
    </method>
    
    <method name="readFile">
        <documentation>
            Read the given file from the metamodel.
        </documentation>
        
        <parameter name="path" type="string">
            <documentation>
                Path to the file.
            </documentation>
        </parameter>
        
        <return type="inputstream" />
        
        <throws exception="org.umlfri.api.exceptions.ParamValueError" />
    </method>
</interface>
