<ElementType id="Gateway" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/Gateway.png"/>
    <Domain id="Gateway"/>
    <Connections>
        <Item value="MessageFlow" with="*"/>
        <Item value="SequenceFlow" with="*"/>
    </Connections>
    <Appearance>
        <Shadow padding="3" color="#cfg.Styles.Element.ShadowColor">
            <Diamond fill="##ff992d" border="#cfg.Styles.Element.LineColor">
                <Proportional ratio="2:1">
                    <Padding padding="12">
                        <Align align="center center">
                            <HBox>
                                <TextBox text="#self.condition" font="#cfg.Styles.Element.NameTextFont" color="#cfg.Styles.Element.NameTextColor"/>
                            </HBox>
                        </Align>
                    </Padding>
                </Proportional>
            </Diamond>
        </Shadow>
    </Appearance>
    <Options>
    </Options>
</ElementType>