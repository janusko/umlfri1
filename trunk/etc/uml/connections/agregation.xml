<?xml version="1.0" encoding="utf-8"?>
<ConnectionType id="Agregation" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/agregate.png" />
    <SrcArrow possible="0" default="0" />
    <DestArrow possible="1" default="1" />
    <Attributes>
        <Item value="Name" type="str" propid="name" />
        <Item value="Source Cardinality" type="str" propid="SCardinality" />
        <Item value="Destination Cardinality" type="str" propid="DCardinality" />
        <Item value="Source Role" type="str" propid="SRole" />
        <Item value="Destination Role" type="str" propid="DRole" />
        <Item value="Notes" type="note" />
    </Attributes>
    <Appearance>
        <LineStyle style="solid" color="/Styles/Connection/LineColor" />
        <ArrowStyle style="diamond" fill="/Styles/Connection/ArrowFillColor" color="/Styles/Connection/ArrowColor" />
        <Label position="center">
            <Condition condition="#name" type="empty" negate="1">
                <Rectangle fill="/Styles/Connection/TextFill">
                    <TextBox text="#name" font="/Styles/Connection/NameTextFont" color="/Styles/Connection/NameTextColor" />
                </Rectangle>
            </Condition>
        </Label>
        <Label position="source">
            <Condition condition="#SCardinality" type="empty" negate="1">
                <Rectangle fill="/Styles/Connection/TextFill">
                    <TextBox text="#SCardinality" font="/Styles/Connection/NameTextFont" color="/Styles/Connection/NameTextColor" />
                </Rectangle>
            </Condition>
        </Label>
        <Label position="destination">
            <Condition condition="#DCardinality" type="empty" negate="1">
                <Rectangle fill="/Styles/Connection/TextFill">
                    <TextBox text="#DCardinality" font="/Styles/Connection/NameTextFont" color="/Styles/Connection/NameTextColor" />
                </Rectangle>
            </Condition>
        </Label>
        <Label position="source+1">
            <Condition condition="#SRole" type="empty" negate="1">
                <Rectangle fill="/Styles/Connection/TextFill">
                    <TextBox text="#SRole" font="/Styles/Connection/NameTextFont" color="/Styles/Connection/NameTextColor" />
                </Rectangle>
            </Condition>
        </Label>
        <Label position="destination+1">
            <Condition condition="#DRole" type="empty" negate="1">
                <Rectangle fill="/Styles/Connection/TextFill">
                    <TextBox text="#DRole" font="/Styles/Connection/NameTextFont" color="/Styles/Connection/NameTextColor" />
                </Rectangle>
            </Condition>
        </Label>
    </Appearance>
</ConnectionType>
