<?xml version="1.0" encoding="utf-8"?>
<ConnectionType id="ActivityFlow" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/state_transition.png" />
    <Domain id="activity_flow" identity="name" />
    
    <Appearance>
        <ConnectionLine style="solid" color="/Styles/Connection/LineColor" />
        <ConnectionArrow index="-1" style="simple" color="/Styles/Connection/ArrowColor" />
        
        <Label position="center">
            <HBox>
                <Condition condition="#stereotype" type="empty" negate="1">
                    <Align align="center">
                        <Rectangle fill="/Styles/Connection/TextFill">
                            <VBox>
                                <TextBox text="&#171;" font="/Styles/Connection/TextFont" color="/Styles/Connection/TextColor" />
                                <TextBox text="#stereotype" font="/Styles/Connection/TextFont" color="/Styles/Connection/TextColor" />
                                <TextBox text="&#187;" font="/Styles/Connection/TextFont" color="/Styles/Connection/TextColor" />
                            </VBox>
                        </Rectangle>
                    </Align>
                </Condition>
                <Condition condition="#name" type="empty" negate="1">
                    <Align align="center">
                        <Rectangle fill="/Styles/Connection/TextFill">
                            <TextBox text="#name" font="/Styles/Connection/NameTextFont" color="/Styles/Connection/NameTextColor" />
                        </Rectangle>
                    </Align>
                </Condition>
            </HBox>
        </Label>
    </Appearance>
</ConnectionType>
