<?xml version="1.0" encoding="utf-8"?>
<ElementType id="Object" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/object.png" />
    <Connections>
        <Item value="Association" />
        <Item value="Generalization" with="Object" allowrecursive="0" />
    </Connections>
    <Attributes>
        <Item value="Name" type="str" propid="name" />
        <Item value="Stereotype" type="str" propid="stereotype" />
        <Item value="Scope" type="enum">
            <Option value="public" />
            <Option value="private" />
            <Option value="protected" />
         </Item>
        <Item value="Attributes" type="attrs" propid="attributes" />
        <Item value="Abstract" type="bool" />
        <Item value="Notes" type="note" />
    </Attributes>
    <Appearance>
        <Shadow padding="3" color="/Styles/Element/ShadowColor">
            <Rectangle fill="/Styles/Element/FillColor" border="/Styles/Element/LineColor">
                <HBox>
                    <Padding padding="5">
                        <HBox>
                            <Condition condition="#stereotype" type="empty" negate="1">
                                <Align align="center">
                                    <VBox>
                                        <TextBox text="&#171;" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                        <TextBox text="#stereotype" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                        <TextBox text="&#187;" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                    </VBox>
                                </Align>
                            </Condition>
                            <Align align="center">
                                <HBox>
                                    <TextBox text="#name" font="/Styles/Element/NameTextFont" color="/Styles/Element/NameTextColor" />
                                    <Line type="horizontal" color="/Styles/Element/NameTextColor" />
                                </HBox>
                            </Align>
                        </HBox>
                    </Padding>
                    <Condition condition="#attributes" type="empty" negate="1">
                        <HBox>
                            <Line type="horizontal" />
                            <Padding padding="5">
                                <HBox>
                                    <Loop collection="attributes">
                                        <VBox>
                                            <TextBox text="@scope" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                            <TextBox text="@line" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                        </VBox>
                                    </Loop>
                                </HBox>
                            </Padding>
                        </HBox>
                    </Condition>
                </HBox>
            </Rectangle>
        </Shadow>
    </Appearance>
</ElementType>
