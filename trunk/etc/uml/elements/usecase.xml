<?xml version="1.0" encoding="utf-8"?>
<ElementType id="UseCase" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/usecase.png" />
    <Domain id="usecase" identity="name" />
    <Connections>
        <Item value="Association" />
        <Item value="Generalization" with="UseCase" allowrecursive="0" />
    </Connections>
    <Appearance>
        <Shadow padding="3" color="/Styles/Element/ShadowColor">
            <Ellipse fill="/Styles/Element/FillColor" border="/Styles/Element/LineColor">
                <Proportional ratio="3:1">
                    <Padding padding="8">
                        <Align align="center center">
                            <HBox>
                                <Condition condition="#stereotype" type="empty" negate="1">
                                    <Align align="center">
                                        <VBox>
                                            <TextBox text="&#171;" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                            <TextBox text="#stereotype" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                            <TextBox text="&#187;" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                        </VBox>
                                    </Align>
                                </Condition>
                                <Align align="center">
                                    <TextBox text="#name" font="/Styles/Element/NameTextFont" color="/Styles/Element/NameTextColor" />
                                </Align>
                            </HBox>
                        </Align>
                    </Padding>
                </Proportional>
            </Ellipse>
        </Shadow>
    </Appearance>
    <Options>
    </Options>
</ElementType>
