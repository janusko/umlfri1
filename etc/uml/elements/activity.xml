<?xml version="1.0" encoding="utf-8"?>
<ElementType id="Activity">
    <Icon path="icons/state.png" />
    <Connections>
        <Item value="ActivityFlow" />
    </Connections>
    <Attributes>
        <Item value="Name" type="str" propid="name" />
        <Item value="Notes" type="note" />
    </Attributes>
    <Appearance>
        <Shadow padding="3" color="/Styles/Element/ShadowColor">
            <Rectangle fill="/Styles/Element/FillColor" border="/Styles/Element/LineColor" right="10 rounded" left="10 rounded">
                <Sizer minheight="50">
                    <Padding padding="5">
                        <Align align="center center">
                            <TextBox text="#name" font="/Styles/Element/NameTextFont" color="/Styles/Element/NameTextColor" />
                        </Align>
                    </Padding>
                </Sizer>
            </Rectangle>
        </Shadow>
    </Appearance>
</ElementType>
