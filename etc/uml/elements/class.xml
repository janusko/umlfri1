<?xml version="1.0" encoding="utf-8"?>
<ElementType id="Class" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd ..\share\schema\metamodel.xsd" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/class.png" />
    <Connections>
        <Item value="Association" />
        <Item value="Generalization" with="Class" allowrecursive="0" />
        <Item value="Agregation" with="Class" allowrecursive="1" />
        <Item value="Compose" with="Class" allowrecursive="0" />
    </Connections>
    <Attributes>
        <Item value="Name" type="str" propid="name" />
        <Item value="Scope" type="enum">
            <Option value="public" />
            <Option value="private" />
            <Option value="protected" />
        </Item>
        <Item value="Attributes" type="attrs" propid="attributes" />
        <Item value="Operations" type="opers" propid="operations" />
        <Item value="Abstract" type="bool" />
        <Item value="Notes" type="note" />
    </Attributes>
    <Appearance>
        <Shadow padding="3" color="/Styles/Element/ShadowColor">
            <Rectangle fill="/Styles/Element/FillColor" border="/Styles/Element/LineColor">
                <HBox>
                    <Padding padding="5">
                        <Align align="center">
                            <TextBox text="#name" font="/Styles/Element/NameTextFont" color="/Styles/Element/NameTextColor" />
                        </Align>
                    </Padding>
                    <Line type="horizontal" color="/Styles/Element/LineColor" />
                    <Padding padding="5">
                        <HBox>
                            <Loop collection="attributes">
                                <VBox>
                                    <TextBox text="@scope" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                    <TextBox text="@line" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                </VBox>
                            </Loop>
                        </HBox>
                    </Padding>
                    <Condition condition="#operations" type="empty" negate="1">
                        <HBox>
                            <Line type="horizontal" color="/Styles/Element/LineColor" />
                            <Padding padding="5">
                                <HBox>
                                    <Loop collection="operations">
                                        <VBox>
                                            <TextBox text="@scope" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                            <TextBox text="@line" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                        </VBox>
                                    </Loop>
                                </HBox>
                            </Padding>
                        </HBox>
                    </Condition>
                </HBox>
            </Rectangle>
        </Shadow>
    </Appearance>
</ElementType>
