<?xml version="1.0" encoding="utf-8"?>
<ConnectionType id="StateTransition" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd ..\share\schema\metamodel.xsd" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/state_transition.png" />
	<SrcArrow possible="0" default="0" />
	<DestArrow possible="1" default="1" />
    <Attributes>
        <Item value="Name" type="str" propid="name" />
        <Item value="Notes" type="note" />
    </Attributes>
    <Appearance>
    	<LineStyle style="solid" color="/Styles/Connection/LineColor" />
    	<ArrowStyle style="simple" fill="/Styles/Connection/ArrowFillColor" color="/Styles/Connection/ArrowColor" />
        <Label position="center">
            <Condition condition="#name" type="empty" negate="1">
                <Rectangle fill="/Styles/Connection/TextFill">
                    <TextBox text="#name" font="/Styles/Connection/NameTextFont" color="/Styles/Connection/NameTextColor" />
                </Rectangle>
            </Condition>
        </Label>
    </Appearance>
</ConnectionType>
