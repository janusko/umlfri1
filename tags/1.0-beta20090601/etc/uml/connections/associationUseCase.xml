<?xml version="1.0" encoding="utf-8"?>
<ConnectionType id="AssociationUseCase" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/associate.png" />
    <Domain id="associationUseCase" identity="name" />
    
    <Appearance>
        <ConnectionLine style="solid" color="/Styles/Connection/LineColor" />
        
        <Label position="center">
            <Condition condition="#name" type="empty" negate="1">
                <Align align="center">
                    <Rectangle fill="/Styles/Connection/TextFill">
                        <TextBox text="#name" font="/Styles/Connection/NameTextFont" color="/Styles/Connection/NameTextColor" />
                    </Rectangle>
                </Align>
            </Condition>
        </Label>
    </Appearance>
</ConnectionType>
