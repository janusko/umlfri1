<?xml version="1.0" encoding="utf-8"?>
<ConnectionType id="transition" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/transition.png" />
    <SrcArrow possible="0" default="0" />
    <DestArrow possible="1" default="1" />
    <Domain id="transition"/>
    <Appearance>
        <LineStyle style="solid" color="/Styles/Connection/LineColor" />
        <ArrowStyle style="simple" fill="/Styles/Connection/ArrowFillColor" color="/Styles/Connection/ArrowColor" />
        <Label position="center">
            <Condition condition="#critical" type="equal" value="True">
                <Rectangle fill="/Styles/Connection/TextFill">
                    <TextBox text="CRITICAL" font="/Styles/Connection/NameTextFont" color="/Styles/Connection/NameTextColor" />
                </Rectangle>
            </Condition>
        </Label>
    </Appearance>
</ConnectionType>
