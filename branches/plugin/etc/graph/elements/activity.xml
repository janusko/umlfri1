<?xml version="1.0" encoding="utf-8"?>
<ElementType id="activity" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/activity.png" />
    <Domain id="activity"/>
    <Connections>
        <Item value="transition" />
    </Connections>
    <Appearance>
        <Shadow padding="3" color="/Styles/Element/ShadowColor">
            <Rectangle fill="/Styles/Element/FillColor" border="/Styles/Element/LineColor">
                <HBox expand="2">
                    <Padding padding="5">
                        <Align align="center">
                            <VBox>
                                <Condition condition="#critical" type="equal" value="True">
                                    <TextBox text="CRITICAL" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                </Condition>
                                <Condition condition="#critical" type="equal" value="False">
                                    <TextBox text=" " font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                </Condition>
                            </VBox>
                        </Align>
                    </Padding>
                    <Line type="horizontal" color="/Styles/Element/LineColor" />
                    <VBox expand="0">
                        <Padding padding="5">
                            <Align align="center center">
                                <TextBox text="#name" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                            </Align>
                        </Padding>
                        <Line type="vertical" color="/Styles/Element/LineColor" />
                        <Padding padding="5">
                            <Align align="center center">
                                <TextBox text="#index" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                            </Align>
                        </Padding>
                        <Line type="vertical" color="/Styles/Element/LineColor" />
                        <Padding padding="5">
                            <Align align="center center">
                                <TextBox text="#duration" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                            </Align>
                        </Padding>
                    </VBox>
                    <Line type="horizontal" color="/Styles/Element/LineColor" />
                    <VBox expand="2">
                        <HBox>
                            <Padding padding="5">
                                <Align align="center center">
                                    <TextBox text="#minstart" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                </Align>
                            </Padding>
                            <Line type="horizontal" color="/Styles/Element/LineColor" />
                            <Padding padding="5">
                                <Align align="center center">
                                    <TextBox text="#maxstart" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                </Align>
                            </Padding>
                        </HBox>
                        <Line type="vertical" color="/Styles/Element/LineColor" />
                        <HBox>
                            <Padding padding="5">
                                <Align align="center center">
                                    <TextBox text="#minend" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                </Align>
                            </Padding>
                            <Line type="horizontal" color="/Styles/Element/LineColor" />
                            <Padding padding="5">
                                <Align align="center center">
                                    <TextBox text="#maxend" font="/Styles/Element/TextFont" color="/Styles/Element/TextColor" />
                                </Align>
                            </Padding>
                        </HBox>
                    </VBox>
                </HBox>
            </Rectangle>
        </Shadow>
    </Appearance>
    <Options>
    </Options>
</ElementType>
