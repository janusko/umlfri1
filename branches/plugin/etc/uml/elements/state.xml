    <Appearance>
        <Shadow padding="3" color="/Styles/Element/ShadowColor">
            <Rectangle fill="/Styles/Element/FillColor" border="/Styles/Element/LineColor" righttop="10 rounded" rightbottom="10 rounded" lefttop="10 rounded" leftbottom="10 rounded">
