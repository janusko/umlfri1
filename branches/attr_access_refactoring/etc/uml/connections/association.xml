<ConnectionType xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd" id="Association">
    <Icon path="icons/associate.png"/>
    <SrcArrow possible="1" default="0"/>
    <DestArrow possible="1" default="0"/>
    <Domain id="association"/>
    <Appearance>
        <LineStyle style="solid" color="#cfg.Styles.Connection.LineColor"/>
        <ArrowStyle style="simple" fill="#cfg.Styles.Connection.ArrowFillColor" color="#cfg/Styles/Connection/ArrowColor"/>
        <Label position="center">
            <HBox>
                <Condition condition="#self.stereotype" type="empty" negate="1">
                    <Align align="center">
                        <Rectangle fill="#cfg.Styles.Connection.TextFill">
                            <VBox>
                                <TextBox text="&#xAB;" font="#cfg.Styles.Connection.TextFont" color="#cfg.Styles.Connection.TextColor"/>
                                <TextBox text="#self.stereotype" font="#cfg.Styles.Connection.TextFont" color="#cfg.Styles.Connection.TextColor"/>
                                <TextBox text="&#xBB;" font="#cfg.Styles.Connection.TextFont" color="#cfg.Styles.Connection.TextColor"/>
                            </VBox>
                        </Rectangle>
                    </Align>
                </Condition>
                <Condition condition="#self.name" type="empty" negate="1">
                    <Align align="center">
                        <Rectangle fill="#cfg.Styles.Connection.TextFill">
                            <TextBox text="#self.name" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                        </Rectangle>
                    </Align>
                </Condition>
            </HBox>
        </Label>
        <Label position="source">
            <Condition condition="#self.SCardinality" type="empty" negate="1">
                <Rectangle fill="#cfg.Styles.Connection.TextFill">
                    <TextBox text="#self.SCardinality" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                </Rectangle>
            </Condition>
        </Label>
        <Label position="destination">
            <Condition condition="#self.DCardinality" type="empty" negate="1">
                <Rectangle fill="#cfg.Styles.Connection.TextFill">
                    <TextBox text="#self.DCardinality" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                </Rectangle>
            </Condition>
        </Label>
        <Label position="source+1">
            <Condition condition="#self.SRole" type="empty" negate="1">
                <Rectangle fill="#cfg.Styles.Connection.TextFill">
                    <TextBox text="#self.SRole" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                </Rectangle>
            </Condition>
        </Label>
        <Label position="destination+1">
            <Condition condition="#self.DRole" type="empty" negate="1">
                <Rectangle fill="#cfg.Styles.Connection.TextFill">
                    <TextBox text="#self.DRole" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                </Rectangle>
            </Condition>
        </Label>
    </Appearance>
</ConnectionType>