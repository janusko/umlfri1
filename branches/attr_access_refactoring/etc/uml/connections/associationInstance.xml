<ConnectionType id="AssociationInstance" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/state_transition.png"/>
    <SrcArrow possible="0" default="0"/>
    <DestArrow possible="1" default="1"/>
    <Domain id="association" identity="name"/>
    <Appearance>
        <LineStyle style="solid" color="#cfg.Styles.Connection.LineColor"/>
        <ArrowStyle style="simple" fill="#cfg.Styles.Connection.ArrowFillColor" color="#cfg.Styles.Connection.ArrowColor"/>
        <Label position="center">
            <HBox>
                <Condition condition="#stereotype">
                    <Align align="center">
                        <Rectangle fill="#cfg.Styles.Connection.TextFill">
                            <VBox>
                                <TextBox text="&#171;" font="#cfg.Styles.Connection.TextFont" color="#cfg.Styles.Connection.TextColor"/>
                                <TextBox text="#stereotype" font="#cfg.Styles.Connection.TextFont" color="#cfg.Styles.Connection.TextColor"/>
                                <TextBox text="&#187;" font="#cfg.Styles.Connection.TextFont" color="#cfg.Styles.Connection.TextColor"/>
                            </VBox>
                        </Rectangle>
                    </Align>
                </Condition>
                <Condition condition="#name">
                    <Align align="center">
                        <Rectangle fill="#cfg.Styles.Connection.TextFill">
                            <HBox>
                                <TextBox text="#name" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                                <Line type="horizontal" color="#cfg.Styles.Element.NameTextColor"/>
                            </HBox>
                        </Rectangle>
                    </Align>
                </Condition>
            </HBox>
        </Label>
        <Label position="source">
            <Condition condition="#SCardinality">
                <Rectangle fill="#cfg.Styles.Connection.TextFill">
                    <TextBox text="#SCardinality" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                </Rectangle>
            </Condition>
        </Label>
        <Label position="destination">
            <Condition condition="#DCardinality">
                <Rectangle fill="#cfg.Styles.Connection.TextFill">
                    <TextBox text="#DCardinality" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                </Rectangle>
            </Condition>
        </Label>
        <Label position="source+1">
            <Condition condition="#SRole">
                <Rectangle fill="#cfg.Styles.Connection.TextFill">
                    <TextBox text="#SRole" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                </Rectangle>
            </Condition>
        </Label>
        <Label position="destination+1">
            <Condition condition="#DRole">
                <Rectangle fill="#cfg.Styles.Connection.TextFill">
                    <TextBox text="#DRole" font="#cfg.Styles.Connection.NameTextFont" color="#cfg.Styles.Connection.NameTextColor"/>
                </Rectangle>
            </Condition>
        </Label>
    </Appearance>
</ConnectionType>