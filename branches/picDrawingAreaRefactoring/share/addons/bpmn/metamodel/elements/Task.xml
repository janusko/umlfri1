<ElementType id="Task" xmlns="http://umlfri.kst.fri.uniza.sk/xmlschema/metamodel.xsd">
    <Icon path="icons/Task.png"/>
    <Domain id="Task" identity="name"/>
    <Connections>
        <Item value="MessageFlow" with="*"/>
        <Item value="SequenceFlow" with="*"/>
    </Connections>
    <Appearance>
        <Shadow padding="3" color="#cfg.Styles.Element.ShadowColor">
            <Rectangle fill="##f0f47b" border="#cfg.Styles.Element.LineColor" right="15 rounded_side" left="15 rounded_side">
                <Sizer minheight="50" minwidth="100">
                    <Padding padding="5">             
                        <Align align="center center">
                            <TextBox text="#self.task" font="#cfg.Styles.Element.NameTextFont" color="#cfg.Styles.Element.NameTextColor"/>  
                        </Align>         
                    </Padding>    
                </Sizer>
            </Rectangle>
        </Shadow>
    </Appearance>
    <Options>
    </Options>
</ElementType>